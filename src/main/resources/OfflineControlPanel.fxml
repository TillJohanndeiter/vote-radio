<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="playerPane" prefHeight="154.0" prefWidth="157.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.techfak.gse.tjohanndeiter.controller.JukeBoxController">
   <children>
      <ImageView fx:id="startOrResume" fitHeight="70.0" fitWidth="70.0" layoutX="44.0" onMouseClicked="#changePlayState" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@play.png" />
         </image>
         <effect>
            <ColorAdjust saturation="-0.85" />
         </effect>
      </ImageView>
      <ImageView fx:id="stop" fitHeight="70.0" fitWidth="70.0" layoutX="44.0" layoutY="75.0" onMouseClicked="#stopPlay" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@stop.png" />
         </image>
         <effect>
            <ColorAdjust saturation="-0.85" />
         </effect>
      </ImageView>
   </children>
</AnchorPane>
